# Kingdom Design House - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===========================================
# PINECONE CONFIGURATION
# ===========================================
# Get your API key from: https://app.pinecone.io/organizations
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_environment_here
PINECONE_INDEX_NAME=kingdom-design-house

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# ===========================================
# HUBSPOT CONFIGURATION
# ===========================================
# Get your access token from: https://app.hubspot.com/private-apps
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here
HUBSPOT_PORTAL_ID=your_hubspot_portal_id_here

# ===========================================
# NETLIFY CONFIGURATION
# ===========================================
# Get your API key from: https://app.netlify.com/user/applications
NETLIFY_API_KEY=your_netlify_api_key_here
NETLIFY_SITE_ID=your_netlify_site_id_here

# ===========================================
# RAG API CONFIGURATION
# ===========================================
RAG_API_URL=http://localhost:3001
RAG_API_KEY=your_rag_api_key_here

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000